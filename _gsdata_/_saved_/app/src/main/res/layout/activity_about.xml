<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_about"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="70dp"
    tools:context="com.egps.ict.assetbrowser.AboutActivity">
    <ImageView
        android:id="@+id/app_icon"
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_launcher"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"/>
    <TextView
        android:layout_marginTop="25dp"
        android:layout_marginStart="80dp"
        android:layout_marginLeft="80dp"
        android:id="@+id/app_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/app_name"
        android:paddingBottom="10dp"
        android:textSize="20sp"
        android:layout_alignParentTop="true"/>
    <TextView
        android:layout_marginStart="80dp"
        android:layout_marginLeft="80dp"
        android:layout_marginBottom="10dp"
        android:id="@+id/app_dev"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Developed by Wisam Naji
Operation Department"
        android:textSize="16sp"
        android:layout_below="@id/app_name"/>
    <TextView
        android:layout_marginStart="80dp"
        android:layout_marginLeft="80dp"
        android:layout_marginBottom="5dp"
        android:id="@+id/app_ver"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Version 1.0"
        android:textSize="14sp"
        android:layout_below="@id/app_dev"/>
    <TextView
        android:layout_marginStart="80dp"
        android:layout_marginLeft="80dp"
        android:id="@+id/app_org"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Mass Group Holding, Erbil Gas Power Station"
        android:textSize="15sp"
        android:paddingBottom="50dp"
        android:layout_below="@id/app_ver"/>
    <TextView
        android:layout_marginStart="20dp"
        android:layout_marginLeft="20dp"
        android:id="@+id/app_info"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="left"
        android:text="  This application is a property of Mass Group Holding, you're not allowed to redistribute the
app in any mean without the organization's written consent."
        android:textSize="14sp"
        android:paddingBottom="50dp"
        android:layout_below="@id/app_org"/>
    <TextView
        android:layout_marginStart="20dp"
        android:layout_marginLeft="20dp"
        android:id="@+id/app_copyright"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Copyright Â© 2017. All rights reserved."
        android:textSize="12sp"
        android:layout_below="@id/app_info"/>

</RelativeLayout>
